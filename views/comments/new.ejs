<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Share Your Comments about <%= house.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/houses/<%= house._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Your Comment">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/houses">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
